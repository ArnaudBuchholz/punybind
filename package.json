{
  "name": "punybind",
  "version": "1.1.0",
  "description": "A minimalist binding helper",
  "main": "dist/punybind.js",
  "files": [
    "dist/*.js"
  ],
  "scripts": {
    "pretest": "rimraf .stryker-tmp",
    "test": "jest",
    "mutate": "stryker run",
    "lint": "standard --fix",
    "build": "uglifyjs index.js --compress --mangle -o dist/punybind.js",
    "serve": "reserve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArnaudBuchholz/punybind.git"
  },
  "keywords": [
    "HTML",
    "binding"
  ],
  "author": "Arnaud Buchholz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudBuchholz/punybind/issues"
  },
  "homepage": "https://github.com/ArnaudBuchholz/punybind#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^6.3.0",
    "@stryker-mutator/jest-runner": "^6.3.0",
    "jest": "^29.3.1",
    "jsdom": "^20.0.2",
    "reserve": "^1.15.2",
    "rimraf": "^3.0.2",
    "standard": "^17.0.0",
    "uglify-js": "^3.17.4"
  },
  "standard": {
    "env": [
      "browser",
      "jest"
    ],
    "globals": [
      "JSDOM",
      "punybind",
      "dom2json"
    ],
    "ignore": [
      "dist/punybind.js"
    ]    
  },
  "jest": {
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "punybind.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
